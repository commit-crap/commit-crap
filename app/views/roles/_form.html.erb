<%= form_for(@role, html: { class: "ls-form row" }) do |f| %>

<% if @role.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

  <ul>
    <% @role.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<fieldset>

  <div class="row">
    <div class="col-md-8">
      <label class="ls-label col-md-8">
        <span class="ls-label-text"><%= f.label :name, "Nome" %></span>
        <%= f.text_field :name, autofocus: true %>
      </label>
    </div>
  </div>

</fieldset>

<div class="ls-actions-btn">
  <%= f.button  "Salvar", :type => "submit" , class: "ls-btn-primary"%>
  <%= f.submit "Limpar", :type => "reset",  class: "ls-btn-primary" %>
  <%= link_to 'Voltar', roles_path, class: "ls-btn-darker" %>
</div>

<% end %>
