<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table border=1 cellspacing=0>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.description %></td>
        <td><%= team.status %></td>
        <td><%= team.icon %></td>
        <td><%= link_to 'Show', [:admin, team] if can? :read, Team %></td>
        <td><%= link_to 'Edit', edit_admin_team_path(team) if can? :update, Team %></td>
        <td><%= link_to 'Destroy', [:admin, team], method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Team %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_admin_team_path if can? :create, Team  %>
